<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt1prod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/nero"
        android:textStyle="bold"
        android:text="TextView"
        android:textSize="12dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/img1_prod"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/img1_prod"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/img1_prod"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/img1_prod"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/g_1_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />



    <ImageView
        android:id="@+id/img2_prod"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/g_1_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txt2prod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/nero"
        android:textStyle="bold"
        android:textSize="12dp"
        android:text="TextView2"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/img2_prod"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/img2_prod"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/img2_prod" />


</android.support.constraint.ConstraintLayout>